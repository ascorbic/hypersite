---
import OG from "@components/OG.astro";
import Layout from "../layouts/Layout.astro";
import PixelImg from "@components/PixelImg.astro";
import home from "@assets/icons/home.png";
---

<Layout
  title="Projects"
  description="Matt Kane's site that looks like it was built in 1991"
>
  <OG title="Projects" close="/desktop">
    <h1>
      <PixelImg src={home.src} width={28} height={25} alt="" /> Matt's home stack
      <PixelImg src={home.src} width={28} height={25} alt="" />
    </h1>
    <p>I build tools to help people create better websites.</p>
  </OG>
</Layout>
<style>
  h1,
  h2 {
    font-family: var(--title-font);
    font-weight: normal;
    line-height: 1.5;
    margin: 0;
    text-align: center;
  }
  p {
    font-family: var(--body-font);
    font-size: 18px;
    text-align: center;
  }
  .about-me {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  a:link,
  a:visited {
    color: inherit;
  }

  p a {
    font-weight: bold;
  }
</style>
